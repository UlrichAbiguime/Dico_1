<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/mywhite"
    android:id="@+id/sheet_1"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:minHeight="120dp"
        android:gravity="top"
        android:layout_height="wrap_content">

        <EditText
            android:hint="@string/sheet_1_hint"
            android:id="@+id/ed_trans"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:paddingLeft="15dp"
            android:background="@color/mywhite"
            android:layout_width="match_parent"
            android:text=""
            android:minLines="3"
            android:layout_toLeftOf="@+id/iv_rubbish"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/rubbish"
            android:id="@+id/iv_rubbish"
            android:background="@drawable/cleanbtselector"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>