<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/mygray"
    android:layout_height="45dp"
    android:minHeight="45dp"
    android:descendantFocusability="afterDescendants"
    >

    <RelativeLayout
        android:id="@+id/relative_background"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_item_del_bg"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_foreground"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/mywhite"
        android:layout_height="45dp"
        android:minHeight="45dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/nodisponible"
            android:id="@+id/tv_historic_item_origin"
            android:textStyle="normal"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="En"
                android:textSize="16sp"
                android:id="@+id/tv_historic_item_from"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text=" to "
                android:textSize="12sp"
                android:textColor="#aaaaaa"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Es"
                android:textSize="16sp"
                android:id="@+id/tv_historic_item_to"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>